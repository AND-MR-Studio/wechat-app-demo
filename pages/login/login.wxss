/* login.wxss */

/* 引入字体 */
@font-face {
  font-family: 'HuiWenMingTi';
  src: url('https://yavin-miniprogram-1322698236.cos.ap-chengdu.myqcloud.com/HuiWenMingChao.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

page {
  background-color: #061429;
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
}

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  background-color: #061429;
  box-sizing: border-box;
  padding: 0 40rpx;
  position: relative;
}

/* 标题区样式 */
.title-area {
  width: 100%;
  text-align: center;
  padding-top: 60rpx;
  margin-bottom: 60rpx;
}

.title {
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 1.4;
}

/* 表单区域样式 */
.form-area {
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 错误信息 */
.error-msg {
  width: 100%;
  text-align: center;
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

/* 输入项 */
.input-item {
  width: 100%;
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #FFFFFF;
  margin-bottom: 10rpx;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  color: #FFFFFF;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.placeholder {
  color: rgba(255, 255, 255, 0.4);
}

/* 忘记密码 */
.forget-password {
  text-align: right;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 40rpx;
}

/* 登录按钮 */
.login-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(270deg, #5CE821 0%, #82FA4E 100%);
  box-shadow: 0 8rpx 20rpx 0 rgba(92, 232, 33, 0.3);
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #061429;
  line-height: 88rpx;
  text-align: center;
  border: none;
  margin-bottom: 30rpx;
}

.login-button.logging-in {
  opacity: 0.8;
}

.login-button::after {
  border: none;
}

/* 注册提示 */
.register-tip {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.register-link {
  color: #5CE821;
  margin-left: 10rpx;
}

/* 底部区域 */
.footer {
  position: fixed;
  bottom: 40rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.3);
} 