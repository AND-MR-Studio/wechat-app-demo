/* main.wxss */

/* 引入字体 */
@font-face {
  font-family: 'HuiWenMingTi';
  src: url('https://yavin-miniprogram-1322698236.cos.ap-guangzhou.myqcloud.com/HuiWenMingChao.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

page {
  background-color: #061429;
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
}

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #061429;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 背景层样式 */
.background-layer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.6;
  filter: blur(3rpx);
}

.background-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 0 40rpx;
  margin-top: 80rpx;
}

.background-text text {
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  font-size: 36rpx;
  color: #76FF03;
  line-height: 2;
  text-align: center;
  opacity: 0.3;
  letter-spacing: 2rpx;
}

/* 顶部导航栏样式 */
.nav-bar {
  position: fixed;
  top: 180rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  padding: 0;
  z-index: 200;
  background-color: transparent;
  box-shadow: none;
}

.title {
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 1.4;
}

.back-button {
  position: absolute;
  left: 40rpx;
  top: 0;
  width: 70rpx;
  height: 70rpx;
  background-color: rgba(51, 51, 51, 0.8);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 101;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
  transition: all 0.2s ease;
}

.back-button:active {
  transform: scale(0.9);
  background-color: rgba(51, 51, 51, 1);
  box-shadow: 0 0 15rpx rgba(255, 255, 255, 0.2);
}

.back-icon {
  width: 24rpx;
  height: 24rpx;
  border-top: 3rpx solid #FFFFFF;
  border-left: 3rpx solid #FFFFFF;
  transform: rotate(-45deg);
  margin-left: 6rpx;
}

.more-button {
  position: absolute;
  right: 40rpx;
  top: 0;
  width: 70rpx;
  height: 70rpx;
  background-color: rgba(51, 51, 51, 0.8);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 101;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
  transition: all 0.2s ease;
}

.more-button:active {
  transform: scale(0.9);
  background-color: rgba(51, 51, 51, 1);
  box-shadow: 0 0 15rpx rgba(255, 255, 255, 0.2);
}

.more-icon {
  position: relative;
  width: 30rpx;
  height: 30rpx;
}

.more-icon::before,
.more-icon::after,
.more-icon > view {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background-color: #5CE821;
  border-radius: 50%;
}

.more-icon::before {
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.more-icon::after {
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.more-icon > view {
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

/* 聊天容器样式 */
.chat-container {
  flex: 1;
  padding: 280rpx 60rpx 180rpx;
  box-sizing: border-box;
  z-index: 5;
  position: relative;
  overflow-y: auto;
}

/* 消息项样式 */
.message-item {
  margin-bottom: 30rpx;
  display: flex;
  align-items: flex-start;
  padding: 10rpx 0;
  background-color: transparent;
  transition: all 0.3s ease;
}

/* 消息前缀样式 */
.message-prefix {
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 1.6;
  margin-right: 16rpx;
  opacity: 0.8;
}

/* 消息文本样式 */
.message-text {
  word-break: break-all;
  white-space: pre-wrap;
  line-height: 1.5;
  font-family: 'HuiWenMingTi', monospace;
}

/* 用户消息样式 */
.user-message {
  background-color: transparent;
}

.user-message .message-prefix,
.user-message .message-text {
  color: #FFFFFF;
}

/* AI消息样式 */
.ai-message {
  background-color: transparent;
}

.ai-message .message-prefix,
.ai-message .message-text {
  color: #FF4444;
  text-shadow: 0 0 3rpx rgba(255, 68, 68, 0.2);
}

/* 提示消息样式 */
.ai-message.hint-message .message-prefix,
.ai-message.hint-message .message-text {
  color: #5CE821;
  text-shadow: 0 0 3rpx rgba(92, 232, 33, 0.3);
  font-weight: 500;
}

.ai-message.hint-message {
  position: relative;
}

.ai-message.hint-message::before {
  content: '';
  position: absolute;
  left: -10rpx;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background-color: #5CE821;
  border-radius: 2rpx;
  box-shadow: 0 0 8rpx rgba(92, 232, 33, 0.5);
}

/* 打字机动画效果 - 增强惊悚感 */
@keyframes typing-horror-1 {
  0% { max-width: 0; }
  40% { max-width: 40%; }
  45% { max-width: 38%; } /* 回退效果 */
  55% { max-width: 55%; }
  100% { max-width: 100%; } /* 确保动画结束后文本100%可见 */
}

@keyframes typing-horror-2 {
  0% { max-width: 0; }
  30% { max-width: 35%; }
  33% { max-width: 33%; } /* 回退效果 */
  60% { max-width: 70%; }
  65% { max-width: 67%; } /* 回退效果 */
  100% { max-width: 100%; } /* 确保动画结束后文本100%可见 */
}

@keyframes typing-horror-3 {
  0% { max-width: 0; }
  25% { max-width: 30%; }
  30% { max-width: 25%; } /* 回退效果 */
  50% { max-width: 50%; }
  55% { max-width: 48%; } /* 回退效果 */
  80% { max-width: 85%; }
  100% { max-width: 100%; } /* 确保动画结束后文本100%可见 */
}

@keyframes typing-horror-4 {
  0% { max-width: 0; }
  20% { max-width: 25%; }
  23% { max-width: 23%; } /* 回退效果 */
  40% { max-width: 45%; }
  43% { max-width: 43%; } /* 回退效果 */
  70% { max-width: 75%; }
  73% { max-width: 73%; } /* 回退效果 */
  100% { max-width: 100%; } /* 确保动画结束后文本100%可见 */
}

/* 光标闪烁动画 */
@keyframes cursor-blink {
  from, to { opacity: 1; }
  50% { opacity: 0; }
}

/* 光标闪烁动画 - 惊悚版 */
@keyframes cursor-blink-horror {
  0%, 100% { opacity: 1; width: 4rpx; }
  25% { opacity: 0.2; width: 4rpx; }
  50% { opacity: 1; width: 5rpx; }
  60% { opacity: 0.5; width: 3rpx; }
  75% { opacity: 1; width: 4rpx; }
}

/* 思考中的省略号动画 */
@keyframes thinking-dots {
  0% { content: '.'; }
  33% { content: '..'; }
  66% { content: '...'; }
  100% { content: '...'; }
}

/* 打字机效果基础样式 */
.typing-animation {
  position: relative;
  display: inline-block;
}

/* 惊悚红色光标 */
.typing-animation::after {
  content: '|';
  position: relative;
  display: inline-block;
  color: #ff0000; /* 红色光标 */
  font-weight: bold;
  margin-left: 2rpx;
  font-size: inherit;
  animation: horror-cursor-blink 0.8s infinite;
}

/* 红色光标动画 */
@keyframes horror-cursor-blink {
  0%, 100% { 
    opacity: 1; 
    text-shadow: 0 0 5px #ff0000, 0 0 10px #ff0000;
  }
  50% { 
    opacity: 0.3; 
  }
}

/* 故障效果 - 文字颤抖 */
.text-glitch {
  animation: glitch-anim 0.3s cubic-bezier(.25, .46, .45, .94) both infinite;
  text-shadow: 
    1px 0 #ff0000, -1px 0 #0000ff,
    0 0 5px rgba(255,255,255,0.4),
    0 0 10px rgba(255,0,0,0.4);
}

/* 故障动画 */
@keyframes glitch-anim {
  0% {
    transform: translate(0);
  }
  20% {
    transform: translate(-2px, 2px);
  }
  40% {
    transform: translate(-2px, -2px);
  }
  60% {
    transform: translate(2px, 2px);
  }
  80% {
    transform: translate(2px, -2px);
  }
  100% {
    transform: translate(0);
  }
}

/* 不同的光标闪烁效果 */
.pause-animation-1::after { 
  animation-duration: 0.7s; 
  animation-timing-function: steps(2, end);
}
.pause-animation-2::after { 
  animation-duration: 0.8s; 
  animation-timing-function: cubic-bezier(0.1, 0.7, 1.0, 0.1);
}
.pause-animation-3::after { 
  animation-duration: 0.9s; 
  animation-timing-function: ease-in-out;
}
.pause-animation-4::after { 
  animation-duration: 1.0s; 
  animation-timing-function: cubic-bezier(0.3, 0.1, 0.7, 1.0);
}

/* AI消息内容 - 惊悚风格 */
.ai-content {
  color: #dddddd; /* 浅灰色文字 */
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7); /* 文字阴影 */
  font-family: 'HuiWenMingTi', monospace;
}

.thinking-dots {
  position: relative;
  display: inline-block;
  min-height: 30rpx;
  min-width: 60rpx;
}

.thinking-dots::after {
  content: '...';
  position: absolute;
  left: 0;
  animation: thinking-dots 1.5s infinite;
  color: #FF4444;
  opacity: 0.8;
}

/* 底部占位 */
.message-bottom-space {
  height: 40rpx;
}

/* 输入区域样式 */
.input-area {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  z-index: 200;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #061429;
  box-shadow: 0 -10rpx 25rpx -5rpx rgba(92, 232, 33, 0.12);
  height: 130rpx;
}

.input-area::before {
  content: '';
  position: absolute;
  top: -30rpx;
  left: 0;
  right: 0;
  height: 30rpx;
  background: linear-gradient(to bottom, rgba(92, 232, 33, 0), rgba(92, 232, 33, 0.05) 60%, rgba(92, 232, 33, 0.08));
  opacity: 0.8;
}

/* 输入框样式 */
.message-input {
  flex: 1;
  height: 80rpx;
  background-color: rgba(51, 51, 51, 0.8);
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  color: #FFFFFF;
  box-sizing: border-box;
  max-width: 600rpx;
  border: 2rpx solid rgba(92, 232, 33, 0.2);
  box-shadow: 0 0 10rpx rgba(92, 232, 33, 0.1) inset;
  transition: all 0.3s ease;
}

.message-input-focus {
  border: 2rpx solid rgba(92, 232, 33, 0.5);
  box-shadow: 0 0 15rpx rgba(92, 232, 33, 0.2) inset;
}

/* 发送按钮样式 */
.send-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #5CE821;
  box-shadow: 0 0 10rpx rgba(92, 232, 33, 0.3);
  transition: all 0.2s ease;
  animation: glowing 3s ease-in-out infinite alternate;
}

@keyframes glowing {
  0% {
    box-shadow: 0 0 10rpx rgba(92, 232, 33, 0.3);
  }
  100% {
    box-shadow: 0 0 20rpx rgba(92, 232, 33, 0.7);
  }
}

.send-button.active {
  background-color: #5CE821;
}

.send-button.inactive {
  background-color: #5CE821;
  opacity: 0.6;
}

.send-button:active {
  transform: scale(0.95);
  opacity: 0.9;
  box-shadow: 0 0 15rpx rgba(92, 232, 33, 0.5);
  animation: none;
}

.send-icon {
  color: #2F0D77;
  font-size: 40rpx;
  font-weight: 700;
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  text-shadow: 0 0 5rpx rgba(255, 255, 255, 0.5);
}

/* 占位符样式 */
.placeholder {
  color: rgba(255, 255, 255, 0.5);
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
}

/* 发送按钮加载动画 */
@keyframes loading-rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.send-icon.loading {
  animation: loading-rotate 0.8s linear infinite;
}

/* 确保动画结束后文本保持可见 */
.message-text {
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 1.6;
  word-wrap: break-word;
  white-space: pre-wrap;
  flex: 1;
  letter-spacing: 1rpx;
  width: auto;
  max-width: 100%;
}

/* 仅显示光标的class，不影响文本宽度 */
.typing-animation-cursor {
  position: relative;
  padding-right: 6rpx;
  text-shadow: 0 0 3rpx rgba(255, 68, 68, 0.2);
}

/* 使用伪元素创建仅光标效果 */
.typing-animation-cursor::after {
  content: '';
  position: absolute;
  right: 0;
  top: 30%;
  height: 40%;
  width: 4rpx;
  background-color: #FF4444;
  border-radius: 1rpx;
  box-shadow: 0 0 5rpx rgba(255, 68, 68, 0.6), 0 0 8rpx rgba(255, 0, 0, 0.4);
  animation: cursor-blink-horror 1.2s step-end infinite;
}

/* 光标样式 */
.cursor {
  display: inline-block;
  width: 2px;
  height: 1em; /* 与字体大小一致 */
  background-color: #333;
  vertical-align: middle;
  margin-left: 2px;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}

/* 打字机效果的容器 */
.message-wrapper {
  display: inline-block;
  position: relative;
  word-break: break-all;
}

/* 不同的光标闪烁速度 */
.pause-animation-1::after { animation-duration: 0.7s; }
.pause-animation-2::after { animation-duration: 0.8s; }
.pause-animation-3::after { animation-duration: 0.9s; }
.pause-animation-4::after { animation-duration: 1.0s; }

/* 确保多行文本在容器内正确换行 */
.ai-content, .user-content {
  word-break: break-all;
  word-wrap: break-word;
}

/* 额外的故障效果 - 水平线 */
.text-glitch::before {
  content: attr(data-text);
  position: absolute;
  left: -2px;
  width: calc(100% + 4px);
  height: 0;
  background: rgba(255, 0, 0, 0.2);
  overflow: hidden;
  animation: glitch-line 2s linear infinite;
  z-index: -1;
}

@keyframes glitch-line {
  0% {
    top: 0;
    height: 0;
  }
  5% {
    top: 0;
    height: 1px;
  }
  10% {
    top: 5px;
    height: 0;
  }
  20% {
    top: auto;
    bottom: 15px;
    height: 1px;
  }
  25% {
    bottom: 10px;
    height: 0;
  }
  75% {
    height: 0;
  }
  80% {
    top: 40%;
    height: 1px;
  }
  85% {
    height: 0;
  }
  100% {
    height: 0;
  }
}

/* 提示消息样式 - 绿色 */
.hint-content {
  color: #5CE821 !important; /* 绿色提示文本 */
  text-shadow: 0 0 5px rgba(92, 232, 33, 0.5) !important; /* 绿色发光效果 */
}

/* 提示消息中的文本也应该是绿色 */
.hint-content .message-text {
  color: #5CE821 !important;
  text-shadow: 0 0 5px rgba(92, 232, 33, 0.5) !important;
}

/* 提示消息的打字机光标也应为绿色 */
.hint-content .typing-animation::after {
  content: '|';
  color: #5CE821 !important; /* 绿色光标 */
  text-shadow: 0 0 5px #5CE821, 0 0 10px #5CE821 !important;
}

/* 提示消息的故障效果也应为绿色 */
.hint-content .text-glitch {
  text-shadow: 
    1px 0 #5CE821, -1px 0 #5CE821,
    0 0 5px rgba(92, 232, 33, 0.4),
    0 0 10px rgba(92, 232, 33, 0.4) !important;
}

/* 绿色光标闪烁动画 */
@keyframes green-cursor-blink {
  0%, 100% { 
    opacity: 1; 
    text-shadow: 0 0 5px #5CE821, 0 0 10px #5CE821;
  }
  50% { 
    opacity: 0.3; 
  }
}

/* 提示消息光标使用绿色动画 */
.hint-content .typing-animation::after {
  animation-name: green-cursor-blink !important;
} 