/* main.wxss */

/* 引入字体 */
@font-face {
  font-family: 'HuiWenMingTi';
  src: url('../../fonts/汇文明朝体.otf') format('opentype');
  font-weight: normal;
  font-style: normal;
}

page {
  background-color: #061429;
}

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #061429;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 背景层样式 */
.background-layer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.6;
  filter: blur(5rpx);
}

.background-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 0 40rpx;
  margin-top: 80rpx;
}

.background-text text {
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  font-size: 36rpx;
  color: #76FF03;
  line-height: 2;
  text-align: center;
  opacity: 0.3;
  letter-spacing: 2rpx;
}

/* 顶部导航栏样式 */
.nav-bar {
  position: fixed;
  top: 180rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  padding: 0;
  z-index: 200;
  background-color: transparent;
  box-shadow: none;
}

.title {
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 1.4;
}

.back-button {
  position: absolute;
  left: 40rpx;
  top: 0;
  width: 70rpx;
  height: 70rpx;
  background-color: rgba(51, 51, 51, 0.8);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 101;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
  transition: all 0.2s ease;
}

.back-button:active {
  transform: scale(0.9);
  background-color: rgba(51, 51, 51, 1);
  box-shadow: 0 0 15rpx rgba(255, 255, 255, 0.2);
}

.back-icon {
  width: 24rpx;
  height: 24rpx;
  border-top: 3rpx solid #FFFFFF;
  border-left: 3rpx solid #FFFFFF;
  transform: rotate(-45deg);
  margin-left: 6rpx;
}

.more-button {
  position: absolute;
  right: 40rpx;
  top: 0;
  width: 70rpx;
  height: 70rpx;
  background-color: rgba(51, 51, 51, 0.8);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 101;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.3);
  transition: all 0.2s ease;
}

.more-button:active {
  transform: scale(0.9);
  background-color: rgba(51, 51, 51, 1);
  box-shadow: 0 0 15rpx rgba(255, 255, 255, 0.2);
}

.more-icon {
  position: relative;
  width: 30rpx;
  height: 30rpx;
}

.more-icon::before,
.more-icon::after,
.more-icon > view {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background-color: #5CE821;
  border-radius: 50%;
}

.more-icon::before {
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.more-icon::after {
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.more-icon > view {
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

/* 聊天容器样式 */
.chat-container {
  flex: 1;
  padding: 280rpx 40rpx 180rpx;
  box-sizing: border-box;
  z-index: 5;
  position: relative;
  overflow-y: auto;
}

/* 消息项样式 */
.message-item {
  margin-bottom: 24rpx;
  display: flex;
  align-items: flex-start;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  background-color: rgba(0, 0, 0, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

/* 消息前缀样式 */
.message-prefix {
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 1.6;
  margin-right: 10rpx;
}

/* 消息文本样式 */
.message-text {
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 1.6;
  word-wrap: break-word;
  flex: 1;
  letter-spacing: 1rpx;
}

/* 用户消息样式 */
.user-message {
  background-color: rgba(92, 232, 33, 0.1);
  border-left: 6rpx solid rgba(92, 232, 33, 0.5);
}

.user-message .message-prefix,
.user-message .message-text {
  color: #FFFFFF;
}

/* AI消息样式 */
.ai-message {
  background-color: rgba(255, 68, 68, 0.1);
  border-left: 6rpx solid rgba(255, 68, 68, 0.5);
}

.ai-message .message-prefix,
.ai-message .message-text {
  color: #FF4444;
  text-shadow: 0 0 3rpx rgba(255, 68, 68, 0.2);
}

/* 打字机动画效果 */
@keyframes typing {
  from { width: 0 }
  to { width: 100% }
}

@keyframes blink-caret {
  from, to { border-color: transparent }
  50% { border-color: rgba(255, 68, 68, 0.5) }
}

.typing-animation {
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  border-right: 2rpx solid rgba(255, 68, 68, 0.5);
  width: 0;
  animation: 
    typing 1.5s steps(30, end) forwards,
    blink-caret .75s step-end infinite;
}

/* 随机停顿动画 */
.pause-animation-1 { 
  animation-delay: 0.2s; 
  animation-duration: 1.2s;
}
.pause-animation-2 { 
  animation-delay: 0.4s; 
  animation-duration: 1.5s;
}
.pause-animation-3 { 
  animation-delay: 0.1s; 
  animation-duration: 1.8s;
}
.pause-animation-4 { 
  animation-delay: 0.3s; 
  animation-duration: 2s;
}

/* 底部占位 */
.message-bottom-space {
  height: 40rpx;
}

/* 输入区域样式 */
.input-area {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  z-index: 200;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #061429;
  box-shadow: 0 -10rpx 25rpx -5rpx rgba(92, 232, 33, 0.12);
  height: 130rpx;
}

.input-area::before {
  content: '';
  position: absolute;
  top: -30rpx;
  left: 0;
  right: 0;
  height: 30rpx;
  background: linear-gradient(to bottom, rgba(92, 232, 33, 0), rgba(92, 232, 33, 0.05) 60%, rgba(92, 232, 33, 0.08));
  opacity: 0.8;
}

/* 输入框样式 */
.message-input {
  flex: 1;
  height: 80rpx;
  background-color: rgba(51, 51, 51, 0.8);
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  color: #FFFFFF;
  box-sizing: border-box;
  max-width: 600rpx;
  border: 2rpx solid rgba(92, 232, 33, 0.2);
  box-shadow: 0 0 10rpx rgba(92, 232, 33, 0.1) inset;
  transition: all 0.3s ease;
}

.message-input-focus {
  border: 2rpx solid rgba(92, 232, 33, 0.5);
  box-shadow: 0 0 15rpx rgba(92, 232, 33, 0.2) inset;
}

/* 发送按钮样式 */
.send-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #5CE821;
  box-shadow: 0 0 10rpx rgba(92, 232, 33, 0.3);
  transition: all 0.2s ease;
  animation: glowing 3s ease-in-out infinite alternate;
}

@keyframes glowing {
  0% {
    box-shadow: 0 0 10rpx rgba(92, 232, 33, 0.3);
  }
  100% {
    box-shadow: 0 0 20rpx rgba(92, 232, 33, 0.7);
  }
}

.send-button.active {
  background-color: #5CE821;
}

.send-button.inactive {
  background-color: #5CE821;
  opacity: 0.6;
}

.send-button:active {
  transform: scale(0.95);
  opacity: 0.9;
  box-shadow: 0 0 15rpx rgba(92, 232, 33, 0.5);
  animation: none;
}

.send-icon {
  color: #2F0D77;
  font-size: 40rpx;
  font-weight: 700;
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
  text-shadow: 0 0 5rpx rgba(255, 255, 255, 0.5);
}

/* 占位符样式 */
.placeholder {
  color: rgba(255, 255, 255, 0.5);
  font-family: 'HuiWenMingTi', "Microsoft YaHei", "微软雅黑", sans-serif;
}

/* 发送按钮加载动画 */
@keyframes loading-rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.send-icon.loading {
  animation: loading-rotate 0.8s linear infinite;
} 